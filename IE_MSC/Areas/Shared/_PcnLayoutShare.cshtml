@{
    var userLogin = (IE_MSC.Areas.Entities.Employee_)Session["UserSession"];
    var newGuid = Guid.NewGuid();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title | @System.Configuration.ConfigurationManager.AppSettings["SystemName"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <link rel="icon" type="image/x-icon" href="~/Contents/Image/favicon.ico">

    <link href="~/Contents/template/HUD_Admin/assets/css/vendor.min.css" rel="stylesheet" />
    <link href="~/Contents/template/HUD_Admin/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/Contents/Custom/Common/_HudAdminNavbar.css" rel="stylesheet" />
    <link href="~/Contents/Custom/Common/Common.css?v=@newGuid" rel="stylesheet" />

    <style>
        .header-glass, .footer-glass, .app-sidebar {
            background: rgb(30 41 54 / 20%);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
        }

        .header-glass {
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }

        .footer-glass {
            border-top: 1px solid rgba(255, 255, 255, 0.3);
        }

        .app-sidebar {
            border-right: 1px solid rgba(255, 255, 255, 0.3);
        }
    </style>

    @RenderSection("styles", required: false)

</head>
<body class="theme-info">

    <div id="app" class="app">

        <div id="header" class="app-header header-glass">

            <div class="desktop-toggler">
                <button type="button" class="menu-toggler" data-toggle-class="app-sidebar-collapsed" data-dismiss-class="app-sidebar-toggled" data-toggle-target=".app">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </button>
            </div>


            <div class="mobile-toggler">
                <button type="button" class="menu-toggler" data-toggle-class="app-sidebar-mobile-toggled" data-toggle-target=".app">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </button>
            </div>


            <div class="brand">
                <a href="index-2.html" class="brand-logo fw-bold">
                    <span class="brand-img-text text-theme me-1">MSC</span>
                    <span class="brand-text">SYSTEM</span>
                </a>
            </div>


            <div class="menu">
                <div class="menu-item dropdown dropdown-mobile-full">
                    <a href="#" data-bs-toggle="dropdown" data-bs-display="static" class="menu-link">
                        <div class="menu-img online">
                            <img src="~/Contents/Image/fii-logo.jpg" alt="Profile" height="60" class="bg-white">
                        </div>
                        <div class="menu-text d-sm-block d-none"><span class="__cf_email__">[@userLogin.EmployeeVNName]</span></div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end me-lg-3 fs-11px mt-1">
                        <a class="dropdown-item d-flex align-items-center" href="profile.html">PROFILE <i class="bi bi-person-circle ms-auto text-theme fs-16px my-n1"></i></a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item d-flex align-items-center" href="/Authentication/LogoutNormal">LOGOUT <i class="bi bi-toggle-off ms-auto text-theme fs-16px my-n1"></i></a>
                    </div>
                </div>
            </div>

        </div>

        @Html.Partial("~/Areas/Shared/_PcnLayoutShareNavbar.cshtml")

        <div id="content" class="app-content">

            @RenderBody()

        </div>

        <div class="position-fixed fixed-bottom text-end pe-3 footer-glass">
            <a href="https://mbdiot-cns.myfiinet.com" target="_blank">@DateTime.Now.Year &copy; <strong><span>MBD A-IOT</span></strong></a>
        </div>

        <a href="#" data-toggle="scroll-to-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>

    </div>


    <script src="~/Contents/template/HUD_Admin/assets/js/vendor.min.js" type="text/javascript"></script>
    <script src="~/Contents/template/HUD_Admin/assets/js/app.min.js" type="text/javascript"></script>
    <script src="~/Contents/Custom/Common/_HudAdminNavbar.js"></script>
    <script src="~/Contents/Custom/Common/Common.js?v=@newGuid"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
