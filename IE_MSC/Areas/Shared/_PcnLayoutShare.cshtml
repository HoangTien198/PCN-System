@using IE_MSC.Commons
@{
    Layout = null;
    var userLogin = (AccountLogin)Session["USER_SESSION"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@System.Configuration.ConfigurationManager.AppSettings["SystemName"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <link rel="icon" type="image/x-icon" href="~/Contents/Image/favicon.ico">

    <link href="~/Contents/template/HUD_Admin/assets/css/vendor.min.css" rel="stylesheet" />
    <link href="~/Contents/template/HUD_Admin/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/Areas/Shared/_HudAdminNavbar.css" rel="stylesheet" />

    <style>
        .header-glass {
            background: rgb(30 41 54 / 20%);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
        }

        .footer-glass {
            background: rgb(30 41 54 / 20%);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
            border-top: 1px solid rgba(255, 255, 255, 0.3);
        }
    </style>

    @RenderSection("styles", required: false)

</head>
<body>

    <div id="app" class="app">

        <div id="header" class="app-header header-glass">

            <div class="desktop-toggler">
                <button type="button" class="menu-toggler" data-toggle-class="app-sidebar-collapsed" data-dismiss-class="app-sidebar-toggled" data-toggle-target=".app">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </button>
            </div>


            <div class="mobile-toggler">
                <button type="button" class="menu-toggler" data-toggle-class="app-sidebar-mobile-toggled" data-toggle-target=".app">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </button>
            </div>


            <div class="brand">
                <a href="index-2.html" class="brand-logo fw-bold">
                    <span class="brand-img-text text-theme me-1">PCN</span>
                    <span class="brand-text">SYSTEM</span>
                </a>
            </div>


            <div class="menu">
                <div class="menu-item dropdown dropdown-mobile-full">
                    <a href="#" data-bs-toggle="dropdown" data-bs-display="static" class="menu-link">
                        <div class="menu-img online">
                            @{
                                if (string.IsNullOrEmpty(userLogin.EmployeeAvatar))
                                {
                                    if (userLogin.Gender == 1)//nam
                                    {
                                        <img src="~/Assets/MSC/images/nam-preview.png" alt="Profile" height="60" class="bg-white">
                                    }
                                    else
                                        if (userLogin.Gender == 0)//nữ
                                    {
                                        <img src="~/Assets/MSC/images/nu-preview.png" alt="Profile" height="60" class="bg-white">
                                    }
                                    else
                                    {
                                        <img src="~/Assets/MSC/images/no-image.png" alt="Profile" height="60" class="bg-white">
                                    }
                                }
                                else
                                {
                                    <img src="~/Assets/MSC/images/employee/@userLogin.EmployeeAvatar" alt="Profile" height="60" class="bg-white">
                                }
                            }

                        </div>
                        <div class="menu-text d-sm-block d-none"><span class="__cf_email__">[@userLogin.EmployeeVNName]</span></div>
                    </a>
                    <div class="dropdown-menu dropdown-menu-end me-lg-3 fs-11px mt-1">
                        <a class="dropdown-item d-flex align-items-center" href="profile.html">PROFILE <i class="bi bi-person-circle ms-auto text-theme fs-16px my-n1"></i></a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item d-flex align-items-center" href="page_login.html">LOGOUT <i class="bi bi-toggle-off ms-auto text-theme fs-16px my-n1"></i></a>
                    </div>
                </div>
            </div>

        </div>


        <div id="sidebar" class="app-sidebar">

            <div class="app-sidebar-content" data-scrollbar="true" data-height="100%">

                <div class="menu">
                    <div class="menu-header">Dashboard</div>
                    <div class="menu-item">
                        <a href="/Dashboard/Dashboard/Index" class="menu-link">
                            <span class="menu-icon"><i class="bi bi-cpu"></i></span>
                            <span class="menu-text">Dashboard</span>
                        </a>
                    </div>

                    <div class="menu-header">PCN</div>

                    <div class="menu-item">
                        <a href="widgets.html" class="menu-link">
                            <span class="menu-icon"><i class="bi bi-columns-gap"></i></span>
                            <span class="menu-text">PCN APPLICATION</span>
                        </a>
                    </div>
                    <div class="menu-item has-sub">
                        <a href="javascript:;" class="menu-link">
                            <div class="menu-icon">
                                <i class="bi bi-bag-check"></i>
                                <span class="w-5px h-5px rounded-3 bg-theme position-absolute top-0 end-0 mt-3px me-3px"></span>
                            </div>
                            <div class="menu-text d-flex align-items-center">MY APPLICATION</div>
                            <span class="menu-caret"><b class="caret"></b></span>
                        </a>
                        <div class="menu-submenu">
                            <div class="menu-item">
                                <a href="#" target="_blank" class="menu-link">
                                    <div class="menu-text">Management</div>
                                </a>
                            </div>
                            <div class="menu-item">
                                <a href="#" target="_blank" class="menu-link">
                                    <div class="menu-text">Create</div>
                                </a>
                            </div>
                            <div class="menu-item">
                                <a href="#" target="_blank" class="menu-link">
                                    <div class="menu-text">Sign</div>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <div id="content" class="app-content">

            @RenderBody()

        </div>

        <div class="position-fixed fixed-bottom text-end pe-3 footer-glass">
            <a href="https://10.220.130.116" target="_blank">@DateTime.Now.Year &copy; <strong><span>MBD A-IOT</span></strong></a>
        </div>

        <a href="#" data-toggle="scroll-to-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>

    </div>


    <script src="~/Contents/template/HUD_Admin/assets/js/vendor.min.js" type="text/javascript"></script>
    <script src="~/Contents/template/HUD_Admin/assets/js/app.min.js" type="text/javascript"></script>
    <script src="~/Areas/Shared/_HudAdminNavbar.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>
