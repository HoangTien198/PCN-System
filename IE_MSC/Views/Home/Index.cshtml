
<style>
    main {
        background-image: url('../../assets/msc/images/bg-login/login-background.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<div class="container">
    <div class="row justify-content-center login-showded" style="display:none">
        @*<div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                <img src="~/Assets/MSC/images/CPD-unscreen.gif" />
            </div>*@
        <div class="col-lg-6 col-md-8 d-flex flex-column align-items-center justify-content-center">

            <div class="d-flex justify-content-center py-4">
                <a href="#" class="logo d-flex align-items-center w-auto">
                    <img src="~/Assets/MSC/images/fii-transparent.jpg" />
                    <span class="d-none d-lg-block">@System.Configuration.ConfigurationManager.AppSettings["SystemName"]</span>
                </a>
            </div><!-- End Logo -->

            <div class="card mb-3">

                <div class="card-body">

                    <div class="pt-4 pb-2">
                        <h5 class="card-title text-center pb-0 fs-4">Login to Your Account</h5>
                        <p class="text-center small">Enter your username & password to login</p>
                    </div>

                    <form class="row g-3 needs-validation" novalidate>

                        <div class="col-12">
                            <label for="yourUsername" class="form-label">Username</label>
                            <div class="input-group has-validation">
                                <input type="text" tabindex="0" name="username" class="form-control" id="username" required placeholder="Press ID Card">
                                <div class="invalid-feedback">Please enter your username.</div>
                            </div>
                        </div>

                        <div class="col-12">
                            <label for="yourPassword" class="form-label">Password</label>
                            <input type="password" name="password" class="form-control" id="password" required placeholder="The initial password is six digits after the date of entry">
                            <div class="invalid-feedback">Please enter your password!</div>
                        </div>

                        @*<div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>
                    </div>*@
                        <div class="col-12">
                            <button type="button" class="btn btn-primary w-100" id="btn-login">Login</button>
                        </div>
                        <div class="col-12">
                            <p class="small mb-0">Don't have account? Contact MBD-TE_Auto: <a href="http://10.220.130.117/AboutUs/Index" target="_blank">31746</a></p>

                        </div>
                    </form>

                </div>
            </div>

            <div class="credits">
                Developed By <a href="https://10.220.130.117/AboutUs/Index">@System.Configuration.ConfigurationManager.AppSettings["TextDevelopedBy"]</a>
            </div>
            <div class="row">
                <div class="col-12">
                    <button class="btn btn-warning btn-back-to-dashboard">Back To Dashboard</button>
                </div>
            </div>
        </div>

    </div>
    <div class="showChart col-12">
        <div class="d-flex justify-content-center py-4">
            <a href="#" class="logo d-flex align-items-center w-auto">
                <img src="/Assets/MSC/images/fii-transparent.jpg">
                <span class="d-none d-lg-block">PCN System</span>
            </a>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <div class="text-item">PCN Application By Status|<span class="filter-rework-selected"></span></div>
                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item li-select-filter" data-selected="today" href="#">Today</a></li>
                                    <li><a class="dropdown-item li-select-filter" data-selected="last7day" href="#">Last 7 days</a></li>
                                    <li><a class="dropdown-item li-select-filter" data-selected="month" href="#">This Month</a></li>
                                    <li><a class="dropdown-item li-select-filter" data-selected="year" href="#">This Year</a></li>
                                </ul>
                            </div>
                        </div>
                        <div id="pcnByStatus"></div>
                    </div>

                </div>
            </div>
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title d-flex justify-content-between">
                            <div class="text-item">PCN Application Created By Department|<span class="filter-rework-selected"></span></div>
                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>Filter</h6>
                                    </li>

                                    <li><a class="dropdown-item li-select-filter" data-selected="today" href="#">Today</a></li>
                                    <li><a class="dropdown-item li-select-filter" data-selected="last7day" href="#">Last 7 days</a></li>
                                    <li><a class="dropdown-item li-select-filter" data-selected="month" href="#">This Month</a></li>
                                    <li><a class="dropdown-item li-select-filter" data-selected="year" href="#">This Year</a></li>
                                </ul>
                            </div>
                        </div>
                        <div id="pcnByDept"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <button class="btn btn-warning btn-show-login">Login To View Detail</button>
            </div>
        </div>
    </div>
    
</div>


@section scripts{
    <script src="~/Assets/MSC/library/hightchart/highcharts.js"></script>
    <script src="~/Assets/MSC/library/hightchart/exporting.js"></script>
    <script src="~/Assets/MSC/library/hightchart/export-data.js"></script>
    <script src="~/Assets/MSC/library/hightchart/accessibility.js"></script>
    <script src="~/Assets/MSC/js/Client/login.js?v=@Guid.NewGuid()"></script>
}