@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>LOGIN | @System.Configuration.ConfigurationManager.AppSettings["SystemName"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <link rel="icon" type="image/x-icon" href="~/Contents/Image/favicon.ico">

    <link href="../../Contents/template/HUD_Admin/assets/css/vendor.min.css" rel="stylesheet" />
    <link href="../../Contents/template/HUD_Admin/assets/css/app.min.css" rel="stylesheet" />
    <link href="~/Contents/plugin/SweetAlert/swal.min.css" rel="stylesheet" />
    <link href="~/Contents/Custom/Common/Common.css" rel="stylesheet" />

</head>
<body class='pace-top'>

    <div id="app" class="app app-full-height app-without-header">

        <div class="login">

            <div class="login-content">
                <div class="d-flex align-items-center justify-content-center">
                    <img class="brand navbar-brand" src="~/Contents/Image/fii-logo.jpg" height="36" />
                    <h1 class="text-center text-uppercase ms-3 mb-0">@System.Configuration.ConfigurationManager.AppSettings["SystemName"]</h1>
                </div>

                <div class="text-white text-opacity-50 text-center mb-4">
                    <a href="https://10.220.130.116" target="_blank">@DateTime.Now.Year &copy; <strong><span>MBD A-IOT</span></strong></a>
                </div>
                @using (Html.BeginForm("LoginNormal", "Authentication", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Card ID <span class="text-danger">*</span></label>
                        @Html.TextBox("username", null, new { @class = "form-control form-control-lg bg-white bg-opacity-5", @placeholder = "Enter your card ID", @id = "username" })
                    </div>
                    <div class="mb-3">
                        <div class="d-flex">
                            <label class="form-label">Password <span class="text-danger">*</span></label>
                            <a href="#" class="ms-auto text-white text-decoration-none text-opacity-50">Forgot password?</a>
                        </div>
                        @Html.Password("password", null, new { @class = "form-control form-control-lg bg-white bg-opacity-5", @placeholder = "Enter your password", @id = "password" })
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            @Html.CheckBox("remember", false, new { @class = "form-check-input", @id = "remember" })
                            <label class="form-check-label" for="customCheck1">Remember me</label>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-outline-theme text-uppercase btn-lg d-block w-100 fw-500 mb-3" onclick="SubmitForm('normal')">Sign In</button>

                    <div class="mb-3">
                        <label class="form-check-label w-100 text-center" for="customCheck1">OR</label>
                    </div>

                    <button type="submit" class="btn btn-smartoffice text-uppercase btn-lg d-block w-100 fw-500 mb-3"  onclick="SubmitForm('smartoffice')">
                        <img src="~/Contents/Image/honhai-logo.png" style="width: 1rem;"/> Sign In With SMART OFFICE
                    </button>
                }

                @if (!ViewData.ModelState.IsValid)
                {
                    <p>Đã xảy ra lỗi:</p>
                    @Html.ValidationSummary()
                }


            </div>

        </div>


        <a href="#" data-toggle="scroll-to-top" class="btn-scroll-top fade"><i class="fa fa-arrow-up"></i></a>


    </div>


    <script src="../../Contents/template/HUD_Admin/assets/js/vendor.min.js" type="text/javascript"></script>
    <script src="../../Contents/template/HUD_Admin/assets/js/app.min.js" type="text/javascript"></script>
    <script src="~/Contents/plugin/SweetAlert/swal.min.js"></script>
    <script src="~/Contents/Custom/Authentication/Authentication.js"></script>

</body>
</html>
